<!DOCTYPE html>
<html>
<head>
  <title>Datingspot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrap">
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <%= link_to 'Datingspot', root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
       <li>
        <%= link_to new_spot_path do %>
        <i class="glyphicon glyphicon-plus-sign"></i>
        New Spot
      <% end %>
      </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to 'Sign Out', 'destroy_user_session_path', method: :delete %></li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
      <% end %>
        <li>
        <%= link_to 'Dating Advice', advices_path %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

<div class="whitey col-xs-10 col-xs-offset-1 features text-center">
  <h1>Featured Posts</h1>
  <div class="col-xs-6 col-md-6">  
   <h3>Dating Someone from Another Country</h3>
   <%= image_tag 'relationship.jpg', class: 'img-responsive' %>
  </div>


  <div class="col-xs-6 col-md-6">
    <h3>What is a <strong>Real</strong> Relationship</h3>
   <%= image_tag 'men.jpg', class: 'img-responsive' %>
  </div>



</div>

<br class="clr" />


  <div id="footer">
    <div class="container">
    
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        youngerik26@gmail.com
        <br />
        702 Nguyen Van Linh
        <br />
        Ho Chi Minh City, Vietnam, 7000
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'https://github.com/erikyoung' do %>
          <%= image_tag 'github.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://www.facebook.com/erik.young.923' do %>
         <%= image_tag 'facebook.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://twitter.com/youngerik26' do %>
          <%= image_tag 'twitter.png', class: 'social-button' %>
        <% end %>
      </div>
  </div>
</div>
      
   

</body>
</html>
