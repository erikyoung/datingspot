<div class="hero col-xs-10 col-xs-offset-1">
<br />

  <div class="headline">
    <h1>Know Where to Go</h1>
  </div>
  
</div>


<% @spots.each do |spot| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= spot.name %></h1><br />
    <i><%= spot.address %></i><br /><br />
    <p><%= spot.description %></p><br />
